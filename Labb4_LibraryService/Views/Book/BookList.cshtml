@model IEnumerable<Book>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Titel
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Available
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td width="25%">@book.Id</td>
                        <td width="25%">@book.Titel</td>
                        <td width="25%">@book.Author</td>
                        <td width="20%">@book.Author</td>                    
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Book exists</p>
    }
</div>