@model IEnumerable<Customer>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary font-weight-light">Person List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Customer" asp-action="CreateCustomer" class="btn btn-secondary">
                Create New Person
            </a>

        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Borrowed Books (går att få till?)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td width="20%">@person.Id</td>
                        <td width="20%">@person.Name</td>
                        <td width="20%">@person.Phone</td>
                        <td width="20%">@person.Email</td>
                        <td width="20%"></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Person exists</p>
    }
</div>


