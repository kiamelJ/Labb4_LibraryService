@model IEnumerable<Customer>



<div class="container p-3">

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Email
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td width="20%">@person.Id</td>
                        <td width="20%">@person.Name</td>
                        <td width="20%">@person.Phone</td>
                        <td width="20%">@person.Email</td>
                        <td width="20%" class="text-center">
                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="Customer" asp-route-id="@person.Id" asp-action="Details" class="btn btn-primary mx-2">
                                    Details
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row">
            <div class="col-md-6 offset-3">
                <h1 class="text-danger">Customer does not exist...</h1>
                <hr />
                <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Return</a>
            </div>

        </div>
    }
</div>


