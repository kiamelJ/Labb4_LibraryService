
@model IEnumerable<Customer>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary font-weight-light">Customer List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Customer" asp-action="CreateCustomer" class="btn btn-secondary">
                Create New Customer
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered font-weight-light" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Email
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td width="20%">@customer.Id</td>
                        <td width="20%">@customer.Name</td>
                        <td width="20%">@customer.Phone</td>
                        <td width="20%">@customer.Email</td>
                        <td width="20%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Customer" asp-route-Id="@customer.Id" asp-action="EditCustomer" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Customer" asp-route-id="@customer.Id" asp-action="Details" class="btn btn-primary mx-2">
                                    Details
                                </a>
                                <a asp-controller="Customer" asp-route-Id="@customer.Id" asp-action="DeleteCustomer" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Person exists</p>
    }
</div>


