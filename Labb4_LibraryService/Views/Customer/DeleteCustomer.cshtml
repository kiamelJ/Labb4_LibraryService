@model Customer


<form method="post" asp-action="Delete">

    @*Det här asp-for pekar mot den propertien vi vill att den ska länka mot*@
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-secondary font-weight-light pl-3">Delete Customer</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Phone"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Phone" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Email" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Confirm" />
                        </div>
                        <div class="col">
                            <a asp-action="List" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>


@*Client side validation. Server side is the "asp-validation-summary" som finns typ nästan högst upp*@
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}